<%= form_for @hit do |f| %>
<%= f.label :hit_url %>
<%= f.text_field :hit_url, value: "#{@hit.hit_url}" %> </br>
<%= f.label :hit_publication %>
<%= f.text_field :hit_publication, value: "#{@hit.hit_publication}" %> </br>
<%= f.label :hit_title %>
<%= f.text_field :hit_title, value: "#{@hit.hit_title}" %> </br>
<%= f.label :hit_author %>
<%= f.text_field :hit_author, value: "#{@hit.hit_author}" %> </br>
<%= f.label :hit_date %>
<%= f.text_field :hit_date, value: "Enter Date" %> </br>
<%= f.label :hit_sentiment %>
<%= f.text_field :hit_sentiment, value: "#{@hit.hit_sentiment}" %> </br>
<%= hidden_field :user, :id %>
<%= hidden_field :coverage_report, :id %>
<%= f.submit "Save Hit" %>
<% end %>
