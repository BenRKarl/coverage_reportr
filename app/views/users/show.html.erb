<div class="row"></div>
<div class="container">
<div class="sixteen columns alpha">
<h1><%= @user.username %>'s Coverage Reports</h1>
<div class="two columns alpha omega">
<%= form_tag(edit_user_path(@user), method: "get") do %>
<%= submit_tag "Edit Account" %>
<% end %>
</div>
<div class="two columns alpha omega">
<%= form_tag(user_path(@user), method: "delete") do %>
<%= submit_tag "Delete Account" %>
<% end %>
</div>

<div class="row"></div>

<div class="sixteen columns cr_list">
<ul>
  <% @coverage_reports.each do |report| %>
  <li>
      <h3>
        <%= report.company_name %>: <%= report.announcement %>
      </h3>
      <%= form_tag(coverage_report_path(report), method: "get") do %>
        <%= hidden_field_tag :user_id, @user.id %>
        <%= submit_tag "View" %>
      <% end %>
  </li>
  <% end %>
</ul>
</div>
<div class="row"></div>
<%= form_tag(new_coverage_report_path, method: "get") do %>
<%= hidden_field :user, :id %>
<%= submit_tag "New Coverage Report" %>
<% end %>
</div>
</div>
