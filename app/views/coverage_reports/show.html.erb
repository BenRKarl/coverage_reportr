<div class="row"></div>
<div class="container">
<div class="sixteen columns alpha">
<div class="five columns alpha omega nav_container">
<%= form_tag(edit_coverage_report_path(@coverage_report), method: "get") do %>
<%= hidden_field :user, :id %>
<%= submit_tag "Edit" %>
<% end %>
<%= form_tag(coverage_report_path(@coverage_report), method: "delete") do %>
<%= hidden_field :user, :id %>
<%= submit_tag "Delete" %>
<% end %>
<%= form_tag(user_path(@user), method: "get") do %>
<%= hidden_field :user, :id %>
<%= submit_tag "Back to Account" %>
<% end %>
</div>
<div class="row"></div>
<h1><%= @coverage_report.company_name %></h1>
</div>
</div>
</div>

<div class="container">
<div class="sixteen columns alpha hits_table">

<table>

<caption>
  <h3>
    <%= @coverage_report.announcement %>
  </h3>
<div class="row"></div>
<%= form_tag(new_hit_path, method: "get") do %>
<%= hidden_field :user, :id %>
<%= hidden_field :coverage_report, :id %>
<%= submit_tag "Add New Hit"%>
<% end %>
<%= form_tag(hits_path, method: "get") do %>
  <%= hidden_field :user, :id %>
  <%= hidden_field :coverage_report, :id %>
  <%= submit_tag "Download Coverage Report"%>
  <% end %>
  <%= form_tag(coverage_reports_find_path, method: "get") do %>
  <%= hidden_field :user, :id %>
  <%= hidden_field :coverage_report, :id %>
  <%= submit_tag "Share Coverage Report"%>
  <% end %>
</caption>

  <tr>
    <th>
      Title
    </th>
    <th>
      Author
    </th>
    <th>
      URL
    </th>
    <th>
      Options
    </th>
  </tr>
  <% @hits.each do |hit| %>
  <tr>
    <td>
      <%= hit.hit_title %>
    </td>
    <td>
      <%= hit.hit_author %>
    </td>
    <td>
      <%= hit.hit_url %>
    </td>
    <td class="hit_options">
      <%= form_tag(edit_hit_path(hit), method: "get") do %>
      <%= hidden_field_tag :user_id, @user.id %>
      <%= hidden_field_tag :coverage_report_id, @coverage_report.id %>
      <%= submit_tag "Edit Hit"%>
      <% end %>
      <%= form_tag(hit_path(hit), method: "delete") do %>
      <%= hidden_field :user, :id %>
      <%= hidden_field :coverage_report, :id %>
      <%= submit_tag "Delete Hit"%>
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
</div>
<div class="row"></div>
</div>
